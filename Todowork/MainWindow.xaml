<Window x:Class="Todowork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Todowork" Height="520" Width="420"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/TodoworkTD_gray.ico"
        Closing="MainWindow_Closing">
    <Window.Resources>
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" />
                                <TextBlock x:Name="Watermark"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="#888888"
                                           Margin="2,0,0,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value="" />
                                    <Condition Property="IsKeyboardFocused" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="待办" Height="32" Margin="0,0,6,0"
                    Command="{Binding ShowTodoCommand}" />
            <Button Grid.Column="1" Content="已完成" Height="32" Margin="6,0,0,0"
                    Command="{Binding ShowCompletedCommand}" />
        </Grid>

        <ListView Grid.Row="1" ItemsSource="{Binding ItemsView}" Margin="0,0,0,10" HorizontalContentAlignment="Stretch"
                  Focusable="False" IsTabStop="False" FocusVisualStyle="{x:Null}"
                  KeyboardNavigation.TabNavigation="None" KeyboardNavigation.DirectionalNavigation="None"
                  IsSynchronizedWithCurrentItem="False"
                  BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Focusable" Value="False" />
                    <Setter Property="OverridesDefaultStyle" Value="True" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="True">
                                    <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" VerticalAlignment="Center" IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                                  Focusable="False" IsTabStop="False" FocusVisualStyle="{x:Null}" />

                        <TextBlock Grid.Column="1" Margin="8,0,8,0" VerticalAlignment="Center" Text="{Binding Text}" TextWrapping="Wrap" />

                        <Button Grid.Column="2" Padding="10,3" Margin="0,0,6,0"
                                Command="{Binding DataContext.TogglePinCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}" Focusable="False" IsTabStop="False" FocusVisualStyle="{x:Null}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Content" Value="置顶" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                            <Setter Property="Content" Value="取消置顶" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="3" Content="删除" Padding="10,3" Focusable="False" IsTabStop="False" FocusVisualStyle="{x:Null}"
                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <CheckBox Grid.Row="0" Grid.Column="0" Content="显示背景" IsChecked="{Binding OverlayShowBackground, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="0,0,8,6" />
            <Slider Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="1" Value="{Binding OverlayBackgroundOpacity, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="文字透明度" VerticalAlignment="Center" Margin="0,0,8,6" />
            <Slider Grid.Row="1" Grid.Column="1" Minimum="0.1" Maximum="1" Value="{Binding OverlayTextOpacity, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" />

            <TextBlock Grid.Row="2" Grid.Column="0" Text="字体大小" VerticalAlignment="Center" Margin="0,0,8,6" />
            <Slider Grid.Row="2" Grid.Column="1" Minimum="10" Maximum="28" Value="{Binding OverlayTextFontSize, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" />

            <TextBlock Grid.Row="3" Grid.Column="0" Text="文字颜色" VerticalAlignment="Center" Margin="0,0,8,0" />
            <UniformGrid Grid.Row="3" Grid.Column="1" Rows="1" Columns="6" Margin="0,2,0,0">
                <Button Width="24" Height="24" Padding="0" Margin="0,0,6,0" Background="#FFFFFFFF" BorderBrush="#66000000" BorderThickness="1"
                        Command="{Binding SetOverlayTextColorCommand}" CommandParameter="#FFFFFFFF" Focusable="False" IsTabStop="False" FocusVisualStyle="{x:Null}" />
                <Button Width="24" Height="24" Padding="0" Margin="0,0,6,0" Background="#FF000000" BorderBrush="#66000000" BorderThickness="1"
                        Command="{Binding SetOverlayTextColorCommand}" CommandParameter="#FF000000" Focusable="False" IsTabStop="False" FocusVisualStyle="{x:Null}" />
                <Button Width="24" Height="24" Padding="0" Margin="0,0,6,0" Background="#FF4DD0E1" BorderBrush="#66000000" BorderThickness="1"
                        Command="{Binding SetOverlayTextColorCommand}" CommandParameter="#FF4DD0E1" Focusable="False" IsTabStop="False" FocusVisualStyle="{x:Null}" />
                <Button Width="24" Height="24" Padding="0" Margin="0,0,6,0" Background="#FF81C784" BorderBrush="#66000000" BorderThickness="1"
                        Command="{Binding SetOverlayTextColorCommand}" CommandParameter="#FF81C784" Focusable="False" IsTabStop="False" FocusVisualStyle="{x:Null}" />
                <Button Width="24" Height="24" Padding="0" Margin="0,0,6,0" Background="#FFFFB74D" BorderBrush="#66000000" BorderThickness="1"
                        Command="{Binding SetOverlayTextColorCommand}" CommandParameter="#FFFFB74D" Focusable="False" IsTabStop="False" FocusVisualStyle="{x:Null}" />
                <Button Width="24" Height="24" Padding="0" Background="#FFF48FB1" BorderBrush="#66000000" BorderThickness="1"
                        Command="{Binding SetOverlayTextColorCommand}" CommandParameter="#FFF48FB1" Focusable="False" IsTabStop="False" FocusVisualStyle="{x:Null}" />
            </UniformGrid>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="水平位置" VerticalAlignment="Center" Margin="0,0,8,6" />
            <Slider Grid.Row="4" Grid.Column="1" Minimum="0" Maximum="1" Value="{Binding OverlayLeftRatio, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" />

            <TextBlock Grid.Row="5" Grid.Column="0" Text="垂直位置" VerticalAlignment="Center" Margin="0,0,8,0" />
            <Slider Grid.Row="5" Grid.Column="1" Minimum="0" Maximum="1" Value="{Binding OverlayTopRatio, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>

        <TextBox Grid.Row="3" Height="34" VerticalContentAlignment="Center"
                 Text="{Binding NewText, UpdateSourceTrigger=PropertyChanged}"
                 Tag="输入待办事项，回车键确认"
                 Style="{StaticResource WatermarkTextBox}"
                 BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Padding="6,0,6,0"
                 PreviewKeyDown="NewTextBox_PreviewKeyDown" />
    </Grid>
</Window>
